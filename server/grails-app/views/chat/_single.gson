import werwolf.Chat
import werwolf.User

model {
    Chat chat
    User user
}

json {
    name chat.getName() ?: (chat.users.size() == 2  ? chat.users.find({ it.id != user.id }).getName() : 'Untitled')
    id chat.id
    messages g.render(template: 'message', var: 'message', collection: chat.getMessages())
}